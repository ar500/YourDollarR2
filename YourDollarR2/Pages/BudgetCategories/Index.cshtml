@page
@model YourDollarR2.Pages.BudgetCategories.IndexModel

@{
    ViewData["Title"] = "Budget Categories";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <h1 class="text-uppercase">Your Categories</h1>
        </div>
        <div class="col-6">
            <form method="get">
                <div class="form-group p-2 m-0 d-flex flex-column justify-content-end" style="width: 100%; height: 100%">
                    <div class="input-group">
                        <input type="search" class="form-control" asp-for="SearchTerm" />
                        <span class="input-group-append">
                            <button class="btn btn-light">
                                <i class="oi oi-magnifying-glass"></i>
                            </button>
                        </span>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-auto">
            @if (Model.Message != null)
            {
                <p class="alert alert-info">@Model.Message</p>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-auto">
            <a asp-page="Create" class="badge badge-primary" data-toggle="modal" data-target="#createModal" id="createButton">
                <i class="oi oi-plus"></i> Create Category
            </a>
        </div>
    </div>
    <div class="row">
        <div class="card-columns mt-3 ml-2">
            @foreach (var category in Model.BudgetCategories)
            {
                <partial name="_Summary" model="category" />
            }
        </div>
    </div>
</div>

@section Modals{
    <div id="modalSection"></div>
}

@section Scripts
{
    <script type="text/javascript" src="~/js/BudgetCategories.js"></script>
}
