@page
@model YourDollarR2.Pages.BudgetsR2.IndexModel

@{
    ViewData["Title"] = "Budgets";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <h1 class="text-uppercase">Your Budgets</h1>
        </div>
        <div class="col-6">
            <form method="get">
                <div class="form-group p-2 m-0 d-flex flex-column justify-content-end" style="width: 100%; height: 100%">
                    <div class="input-group">
                        <input type="search" class="form-control" asp-for="SearchTerm" />
                        <span class="input-group-append">
                            <button class="btn btn-light">
                                <i class="oi oi-magnifying-glass"></i>
                            </button>
                        </span>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-auto">
            @if (Model.Message != null)
            {
                <p class="alert alert-info">@Model.Message</p>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-auto">
            <a asp-page="Create" class="badge badge-primary" data-toggle="modal" data-target="#createModal" id="createButton">
                <i class="oi oi-plus"></i> Create Budget
            </a>
        </div>
    </div>
    <div class="row">
        <div class="card-deck-wrapper mt-3">
            <div class="card-deck">
                @foreach (var budget in Model.Budgets)
                {
                    <partial name="_Summary" model="budget" />
                }
            </div>
        </div>
    </div>
</div>

@section Modals{
    <div id="modalSection"></div>
}

@section Scripts{
    <environment include="Development">
        <script type="text/javascript" src="~/js/Budgets.js"></script>

        <script src="~/node_modules/gijgo/js/gijgo.min.js"></script>
        <link href="~/node_modules/gijgo/css/gijgo.min.css" rel="stylesheet" />

        <script src="~/node_modules/bootstrap-multiselect/dist/js/bootstrap-multiselect.js"></script>
        <link href="~/node_modules/bootstrap-multiselect/dist/css/bootstrap-multiselect.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <script type="text/javascript" src="~/js/Budgets.js"></script>
        <script src="~/node_modules/gijgo/js/gijgo.min.js"></script>
        <link href="~/node_modules/gijgo/css/gijgo.min.css" rel="stylesheet" />

        <script src="~/node_modules/bootstrap-multiselect/dist/js/bootstrap-multiselect.js"></script>
        <link href="~/node_modules/bootstrap-multiselect/dist/css/bootstrap-multiselect.css" rel="stylesheet" />
    </environment>

}