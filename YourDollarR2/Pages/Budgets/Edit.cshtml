@page "{budgetId:guid?}"
@model YourDollarR2.Pages.Budgets.EditModel
@{
    ViewData["Title"] = "Edit";
}

@if (Model.Budget.Id == Guid.Empty)
{
    <h1>New Budget</h1>
}
else
{
    <h1>Editing: @Model.Budget.ShortName</h1>
}

<form method="post">
    <input type="hidden" asp-for="Budget.Id" />
    <div class="form-group">
        <label asp-for="Budget.ShortName"></label>
        <input asp-for="Budget.ShortName" class="form-control" />
        <span class="text-danger" asp-validation-for="Budget.ShortName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Budget.Description"></label>
        <input asp-for="Budget.Description" class="form-control" />
        <span class="text-danger" asp-validation-for="Budget.Description"></span>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Budget.CycleStartDate)
        @Html.EditorFor(model => model.Budget.CycleStartDate, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Budget.CycleStartDate, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Budget.CycleEndDate)
        @Html.EditorFor(model => model.Budget.CycleEndDate, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Budget.CycleEndDate, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label asp-for="Budget.AllocatedFunds"></label>
        <input asp-for="Budget.AllocatedFunds" class="form-control" />
        <span class="text-danger" asp-validation-for="Budget.AllocatedFunds"></span>
    </div>
    <div class="form-group">
        <select asp-for="ReturnedExpenseIds" class="form-control" id="expenses-select"
                asp-items="@(new SelectList(Model.Expenses, "Id", "ShortName"))"></select>
    </div>
    <div class="form-group">
        <a asp-page="..\Expenses\Edit" class="btn-outline-info btn">
            <i class="oi oi-plus"></i>
            Add a new Expense
        </a>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts
{
    <environment include="Development">
        <script src="~/node_modules/gijgo/js/gijgo.min.js"></script>
        <link href="~/node_modules/gijgo/css/gijgo.min.css" rel="stylesheet" />

        <script src="~/node_modules/bootstrap-multiselect/dist/js/bootstrap-multiselect.js"></script>
        <link href="~/node_modules/bootstrap-multiselect/dist/css/bootstrap-multiselect.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <script src="~/node_modules/gijgo/js/gijgo.min.js"></script>
        <link href="~/node_modules/gijgo/css/gijgo.min.css" rel="stylesheet" />

        <script src="~/node_modules/bootstrap-multiselect/dist/js/bootstrap-multiselect.js"></script>
        <link href="~/node_modules/bootstrap-multiselect/dist/css/bootstrap-multiselect.css" rel="stylesheet" />
    </environment>

    <script>
        $(function () {
            $('#CycleStartDate').datepicker({
                uiLibrary: 'bootstrap4'
            });
        });
        $(function () {
            $('#CycleEndDate').datepicker({
                uiLibrary: 'bootstrap4'
            });
        });

        // Multi-select plugin
        $(document).ready(function () {
            $('#expenses-select').multiselect({
                enableFiltering: true,
                enableCaseInsensitiveFiltering: true,
                maxHeight: 400,
                buttonClass: 'btn btn-outline-info',
                nonSelectedText: 'Add your bills',
                numberDisplayed: 10,
                includeSelectAllOption: true
            });
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}

