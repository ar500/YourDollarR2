@using Microsoft.EntityFrameworkCore
@using YourDollarR2.Dtos
@model BudgetDto

<div class="card card-default">
    <div class="card-header">
        <h3>@Model.ShortName</h3>
    </div>
    <div class="card-body">
        <ul class="list-group">
            <li class="list-group-item">Description: @Model.Description</li>
            <li class="list-group-item">
                <ul class="list-inline">
                    <li class="list-inline-item">Start Date: @Model.CycleStartDate.ToString("d")</li>
                    <li class="list-inline-item">End Date: @Model.CycleEndDate.ToString("d")</li>
                </ul>
            </li>
            <li class="list-group-item">Funds: @Model.Funds</li>
        </ul>
    </div>
    <div class="card-footer">
        <a class="btn btn-lg" asp-page="./Detail"
           asp-route-budgetId="@Model.Id">
            <i class="oi oi-zoom-in"></i>
        </a>
        <a class="btn btn-lg" asp-page="./Edit"
           asp-route-budgetId="@Model.Id">
            <i class="oi oi-brush"></i>
        </a>
        <a class="btn btn-lg" asp-page="./Delete"
           asp-route-budgetId="@Model.Id">
            <i class="oi oi-trash"></i>
        </a>
    </div>
</div>

