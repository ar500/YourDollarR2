@page "{budgetId:guid}"
@using YourDollarR2.Core
@model YourDollarR2.Pages.Budgets.DetailModel
@{
    ViewData["Title"] = "Budget Detail";
}

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<div class="card card-header">
    <h1>@Model.Budget.ShortName</h1>
</div>
<div class="card-body">
    <div class="list-group">
        <div class="list-group-item">
            <span>
                Start Date: @Model.Budget.CycleStartDate.ToString("d")
            </span>
            <span>
                End Date: @Model.Budget.CycleEndDate.ToString("d")
            </span>
        </div>
        <div class="list-group-item">
            Description: @Model.Budget.Description
        </div>
        <div class="list-group-item">
            Funds: @Model.Budget.Funds.ToString("C")
        </div>
        @foreach (var group in @Model.Budget.CategoryGroups)
        {
            <div class="list-group-item">
                <partial name="_ListExpenseCategory" model="group"/>
            </div>
        }
    </div>
</div>
<div class="card-footer">
    <a asp-page="./List" class="btn btn-light">See all budgets.</a>
</div>


