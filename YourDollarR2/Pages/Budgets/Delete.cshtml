@page "{budgetId:Guid}"
@model YourDollarR2.Pages.Budgets.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Remove Budget</h2>
<div class="alert alert-danger">
    Are you sure that you want to remove the budget @Model.Budget.ShortName?
</div>
<form method="post">
    <button type="submit" class="btn btn-danger">Yes!</button>
    <a asp-page="List" class="btn btn-default">Cancel</a>
</form>

