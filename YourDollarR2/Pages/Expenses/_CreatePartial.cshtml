@model ExpenseForCreateDto

    <div class="modal-body">
        <form method="post" asp-page="/Expenses/Create" id="createExpense">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.ShortName" class="control-label"></label>
                <input asp-for="@Model.ShortName" class="form-control" />
                <span asp-validation-for="@Model.ShortName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.BudgetCategory"></label>
                <select asp-for="ReturnedCategoryId" class="form-control"
                        asp-items="@Model.Categories"></select>
                <a asp-page="..\BudgetCategories\Edit" class="btn-outline-info btn-sm">
                    <i class="oi oi-plus"></i>
                    Add a new category
                </a>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description" class="control-label"></label>
                <input asp-for="@Model.Description" class="form-control" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PayoutAmount" class="control-label"></label>
                <input asp-for="@Model.PayoutAmount" class="form-control" />
                <span asp-validation-for="@Model.PayoutAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CompanyName" class="control-label"></label>
                <input asp-for="@Model.CompanyName" class="form-control" />
                <span asp-validation-for="@Model.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PayoutAccountNumber" class="control-label"></label>
                <input asp-for="@Model.PayoutAccountNumber" class="form-control" />
                <span asp-validation-for="@Model.PayoutAccountNumber" class="text-danger"></span>
            </div>
        </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary" form="createExpense">Create</button>
        </div>

@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}