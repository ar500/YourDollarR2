@page
@model YourDollarR2.Pages.Expenses.ListModel
@{
    ViewData["Title"] = "List";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <h1 class="text-uppercase">All Expenses</h1>
        </div>
        <div class="col-6">
            <form method="get">
                <div class="form-group p-2 m-0 d-flex flex-column justify-content-end" style="width: 100%; height: 100%">
                    <div class="input-group">
                        <input type="search" class="form-control" asp-for="SearchTerm"/>
                        <span class="input-group-append">
                            <button class="btn btn-light">
                                <i class="oi oi-magnifying-glass"></i>
                            </button>
                        </span>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-auto">
            <a asp-page=".\Edit" class="badge badge-primary">
                <i class="oi oi-plus"></i> New Expense
            </a>
        </div>
    </div>
    <div class="row">
        <div class="card-deck-wrapper mt-3">
            <div class="card-deck">
                @foreach (var expense in Model.Expenses)
                {
                    <div class="col-4">
                        <partial name="_Summary" model="expense"/>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


